{% extends 'base.html.twig' %}


{% block body %}

    {% for order in orders %}
        <div class="fx-me-flex">
        <div id="prodcard{{ order.id }}" class="card">
            <h1>{{ order.placedAt.format('d/m/Y') }}</h1>
            {% for orderHasProduct in order.orderHasProducts %}
                <p class="price">Product id {{ orderHasProduct.productkey.id }}</p>
                <img src="{{ orderHasProduct.productkey.img }}" alt="Denim Jeans" style="width:100%">

                            <p>{{ orderHasProduct.productkey.description }}</p>
                            
                <span>Amount:</span>
                <span id="amount">{{ orderHasProduct.amount }}</span>
            {% endfor %}
        </div>
    {% endfor %}
    </div>



    <style>

        .fx-me-flex {
            width: 100%;
            display: flex;
            justify-content: space-evenly;

        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
            padding: 5%;
            border-radius: 5px;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .drgn {
            border: 3px solid black;
            background-color: black;
            color: white;
            width: 30%;

        }

        .drgn:hover {
            border: 3px solid black;
            background-color: transparent;
            color: black;
        }

        .jmr {
            display: flex;
            justify-content: space-between;
            margin: 30px;
        }

        .pech {
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
            /*align-content: center;*/
        }
    </style>
{% endblock %}
