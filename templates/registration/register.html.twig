{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
    <div>
        <span> {{ form_start(registrationForm) }}</span>
        <span> {{ form_row(registrationForm.email) }}</span>
        <span> {{ form_row(registrationForm.name) }}</span>
        <span>{{ form_row(registrationForm.lastname) }}</span>
        <span>{{ form_row(registrationForm.phone) }}</span>
        <span> {{ form_row(registrationForm.adress) }}</span>
        <span>{{ form_row(registrationForm.city) }}</span>
        <span>{{ form_row(registrationForm.postalcode) }}</span>

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}

    </div>



{% endblock %}
